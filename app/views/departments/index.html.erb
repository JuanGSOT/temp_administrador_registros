<div class="grid-comp">
<%= render 'layouts/headerDate' %>
<%= render 'layouts/lateral' %>
    <div class="container main">
    <br>
    <h1>Departamentos</h1>
        <div class="container">
            <!--<div class="col-xs-12 col-sm-6 col-md-6">-->
                <table class="table table-hover table-responsive" style="display: table;width: 100%">
                    <thead>
                        <tr>
                            <td scope="col">Eliminar</td>
                            <td scope="col">Editar</td>
                            <td scope="col">Nombre</td>
                            <td scope="col">Abreviaci√≥n</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% @departments.each do |t| %>
                        <tr valign="middle">
                            <td><%= link_to raw("<i class='mi md-36'>&#xE92B;</i>"), t, method: :delete, data: { confirm: 'Estas seguro de eliminarlo?' }, class: "btn btn-danger" %></td>
                            <td><a href="/departments/<%= t.id %>" class="btn btn-warning"><i class="mi md-36 md-light">&#xE150;</i></a></td>
                            <td><h5><%= t.name %></h5></td>
                            <td><h5><%= t.abbrev %></h5></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            <!--<div id="container" class="col-xs-12 col-sm-6 col-md-6 container">
            </div>
               
            </div>-->
        </div>
    
        <div class="jumbotron">
            <h3 class="text-center">Nuevo Registro</h3>
            
            <%if  @department_find %>
                <%= render 'departments/update' %>
            <% else %>
                <%= render 'departments/new' %>
            <% end %>
            
        </div>
    </div>

    <%= render 'layouts/footer' %>
</div>
