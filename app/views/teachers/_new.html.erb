<%= form_for @teacher, url: {action: "create"} do |f| %>
    <div class="form-group">
        <%= f.label :code, "CÃ³digo de profesor:", class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :code, class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "Nombre(s):", class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :name, class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <%= f.label :surnames, "Apellidos:", class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :surnames, class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <%= f.label :department_id, "Departamento:", class: "col-form-label col-form-label-sm" %>
        <%= f.select :department_id, Department.all.collect {|x| [x.name, x.id]}, {:include_blank => "Selecciona uno" }, class: "custom-select" %>
    </div>
    <div class="form-group">
        <%= f.label :contract, "Contrato:", class: "col-form-label col-form-label-sm" %>
        <%= f.select :contract, [["Honorarios", 1], ["Plaza", 0]], {:include_blank => "Selecciona uno" }, class: "custom-select" %>
    </div>
    <%= f.hidden_field :status, :value => false %>
    <%= f.submit "Guardar", class: "btn btn-success" %>
<% end %>