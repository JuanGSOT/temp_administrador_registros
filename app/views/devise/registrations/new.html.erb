<div class="grid g-s">
<header>
  <h2 class="header-session"> <%= link_to "RegÃ­strate", root_path , class: "c-link" %> </h2>
</header>

<div class="container main my-5">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group d-flex justify-content-center flex-column">
    <%if flash[:recaptcha_error] %>
      <div class="error-captcha">
        <%= flash[:recaptcha_error] %>
      </div>
    <% end %>
    
    <%= recaptcha_tags %>
  </div>

    <%= f.submit "Registrarse", class: "btn btn-success btn-lg btn-block" %>
<% end %>
</div>

<footer class="footer footer-handle">
<%= render "devise/shared/links" %>
</footer>
</div>
<script>
document.getElementsByTagName('form')[0].className = 'form'
</script> 