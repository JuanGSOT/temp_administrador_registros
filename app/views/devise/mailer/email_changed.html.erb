<div class="title">
  <h1>Hello <%= @email %>!</h1>
</div>

<div class="container background-email">
    <div class="content">
 
        <div class="flex-text">
          <% if @resource.try(:unconfirmed_email?) %>
            <p>We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
          <% else %>
            <p>We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
          <% end %>
        </div>
    </div>
</div>
<style>
.background-email{
background:rgba(0,0,0,0) url(https://www.toptal.com/designers/subtlepatterns/patterns/wormz.png) repeat scroll 0 0;height:100vh;padding-top:60px;
}
.content{max-width:500px;min-height:300px;background:#64DD17;border-top:9px solid #33691E;border-bottom:10px solid #33691E;border-radius:.6em;padding:5px 20px;margin:0 auto;display:flex;justify-content:center;flex-direction:column}.title{background-color:#FFC107;text-align:center;padding-top:10px;align-content:center;color:#FF6F00;text-shadow:1px 1px rgba(0,0,0,.4)}.title a{color:#FF6F00;text-decoration:none}
</style>